{
  "env": {
    "browser": false,
    "commonjs": true,
    "es2020": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "requireConfigFile": false
  },
  "rules": {
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1,
        "ignoreComments": true
      }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": 0,
    "no-console": 0,
    "no-trailing-spaces":  "error",
    "semi": 0,
    "require-await": "warn",
    "no-unused-vars": ["error", { "args": "none" }]
  }
}
